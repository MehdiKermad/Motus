<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_letter_neutral">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/firstLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/secondLetter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/bg_letter_right"
        tools:text="M" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/secondLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/thirdLetter"
        app:layout_constraintStart_toEndOf="@id/firstLetter"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/bg_letter_misplaced"
        tools:text="A" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/thirdLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/fourthLetter"
        app:layout_constraintStart_toEndOf="@id/secondLetter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="C" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fourthLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/fifthLetter"
        app:layout_constraintStart_toEndOf="@id/thirdLetter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="H" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fifthLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@id/sixthLetter"
        app:layout_constraintStart_toEndOf="@id/fourthLetter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sixthLetter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/letter_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fifthLetter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="N" />

</androidx.constraintlayout.widget.ConstraintLayout>
